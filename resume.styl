//@import 'fonts.styl'

dark = #444
shaded = #aaa
left-space = 150px

html, body
	font-family "Open Sans", sans-serif
	font-weight normal
	font-style normal
	font-size 14px

//*
//	outline 1px dotted red

.portrait
	background url(portrait.jpg)
	background-size 480px 640px
	background-position -165px -165px
	width 90px
	height 120px
	position absolute
	right 8px
	top 8px

.contact
	font-size 14px
	font-family inherit
	text-align right
	position absolute
	top 5px
	right 110px
	margin 0
	padding 0

header
	height 120px
	h1
		font-size 40px
		font-weight 400
		margin 0
		//font-style italic
	h2
		color dark
		font-size 24px
		margin 0
		font-style italic
		font-weight 300
	h3
		margin 0
		color dark
		font-size 16px
		font-style italic
		font-weight 300

section
	padding-left left-space
	padding-top 20px
	margin-top 20px
	border-top 1px solid shaded
	position relative
	.left
		font-size 24px
		line-height 24px
		height 24px
		font-weight 300
		font-style italic
		position absolute
		left 0
		//margin -24px 0px 0px (- left-space)
		width left-space
	p:first-of-type
		margin-top 0
	h1, h2
		font-size 20px
		font-weight 300
		font-style normal
		margin 0

ul
	padding 0
	margin 0
	li
		list-style none

.profile p
	font-size 18px
.skills
	dl
		margin 0
	dt, dd
		width 50%
		margin 0
		margin-left 50%
		padding 0
		line-height 20px
		&:first-of-type
			margin-left 0
	dd:first-of-type
		margin-bottom -80px
	dt
		font-weight bold
		text-align center
.technical
	li
		font-size 16px
		width 32.5%
		display inline-block
.edu
	font-size 16px
	font-weight normal
	margin 0
	line-heigt 20px
	&:not(:first-of-type)
		border-top 1px solid shaded
		margin-top 13px
		padding-top 8px
	.date
		font-size 20px
		font-weight 300
		font-style italic
		line-height 42px
		display inline-block
		float left
		padding-right 20px
	.univ, .thesis
		font-size 14px
		line-height 18px
	.thesis
		font-style italic
.strength
	li
		&::before
			font-weight bold
			width 1em
			padding 0px 3px
			content "+"
		&.minus::before
			content "−"

.pagebreak
	font-size 40px
	font-weight 400
	margin 0
	page-break-before always

.experience
	h2, h3
		font-size 18px
	li::before
		content "–"
		padding 0px 3px

.employer
	page-break-inside avoid
	margin-bottom 10px
	.left
		margin-top -24px
